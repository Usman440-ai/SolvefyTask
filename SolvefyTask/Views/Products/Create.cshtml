@model ProductDTO
@{

}
<div class="row">
    <div class="col-md-8 mx-auto rounded border border pt-3">
      <h2 class="text-center mb-5">New product</h2>



      <form method="post" enctype="multipart/form-data">
          <div class="row mb-3">
       <label class="col-sm-4 col-form-label">Name</label>
       <div class="col-sm-8">
           <input class="form-control" asp-for="Name" />
           <span asp-validation-for="Name" class="text-danger"></span>
       </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Brand</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Brand" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Select</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Cateogory">
                        <option value='Other'>Other</option>
                        <option value='Phones'>Phones</option>
                        <option value='Computers'>Computers</option>
                        <option value='Accesories'>Accesories</option>
                        <option value='Printers'>Printers</option>
                        <option value='Cameras'>Cameras</option>

                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Descprition</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Descprition"></textarea>
                    <span asp-validation-for="Descprition" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ImagFile</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ImageFile" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-danger" asp-controller="Products" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>


      </form>
    </div>
</div>